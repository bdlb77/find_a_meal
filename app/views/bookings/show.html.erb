<div class="page-container">
  <div class="left-container">
    <div id= "booking-name">
      <h2><%= @event.name %></h2>
    </div>
    <div id="booking-time">
      <h2>
        <%= @event.date.strftime "%B %e" %> at <%= @event.time.strftime "%H:%M" %>
      </h2>
    </div>
    <div id="booking-price">
      <h3>Price: <%=@event.price %>$</h3>
    </div>
    <div id="booking-des">
      <h4>Description:</h4>
      <%= @event.description %>
    </div>
    <div id="buttons-event">
      <%= link_to "Cancel Reservation", booking_path,
        class: "btn-sm btn btn-warning ", method: :delete %>
    </div>

  </div>
  <div class="right-container">
   <% if @event['photo'].blank?  %>
      <div class="bookings-picture pic-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://source.unsplash.com/collection/1322972/1080x800);">
      </div>
    <% else %>
      <div class="pic-card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%=image_path @event.photo, crop: :fill %>);">
      </div>
    <% end %>
    <div id="map" class="booking-map" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>






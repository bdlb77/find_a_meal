    <!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
    <%#=  simple_form_for :event, url: events_path, method: 'GET', :html => { :class => 'form-inline' } do |f|  %>
    <%#= f.input :date, as: :date, input_html: { class: 'datepicker label-margin' },placeholder: 'Event date', label: false %>
